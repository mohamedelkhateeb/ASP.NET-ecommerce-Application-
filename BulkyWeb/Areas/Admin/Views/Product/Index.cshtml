@using Bulky.Models.Models;
@model List<Product>
@{
    ViewData["Title"] = "Products";
}


<div class="container">
    <div class="row pt-4">
        <div class="col">
            <h1>
                Product List
            </h1>
        </div>
        <div class="col text-end">
            <a asp-controller="Product" asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Product
            </a>
        </div>
    </div>
    <table class="table text-center table-bordered w-full table-striped">
        <thead>
            <tr>
                <td>ID</td>

                <th>
                    Title
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Price
                </th>
                <th>
                    Author
                </th>
                <th>
                    Category
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>

                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.ISPN
                    </td>
                    <td>
                        @item.ListPrice
                    </td>
                    <td>
                        @item.Author
                    </td>
                    <td>@item.CategoryId</td>
                    <td class="d-flex m-auto justify-content-center align-items-center text-center gap-5">
                        <div>
                            <a class="btn btn-primary" asp-controller="Product" asp-route-id="@item.Id" asp-action="Edit">
                                Edit
                            </a>
                        </div>
                        <div>
                            <a class="btn btn-danger" asp-controller="Product" asp-route-id="@item.Id" asp-action="Delete">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
