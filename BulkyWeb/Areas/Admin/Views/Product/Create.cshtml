@using Bulky.Models.Models;
@model Product
@{
    ViewData["Title"] = "Add Product";
}

<div class="w-75 m-auto">
    <h2>
        Add Product
    </h2>
    <div class="w-75">
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="d-flex flex-column">
                <label asp-for="Title" class="py-2 ps-3"></label>
                <input asp-for="Title" class="  bg-light ps-4 p-2 rounded-pill form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column">
                <label asp-for="Description" class="py-2 ps-3"></label>
                <input asp-for="Description" class="  bg-light ps-4 p-2 rounded-pill form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="d-flex flex-column">
                <label asp-for="ISPN" class="py-2 ps-3"></label>
                <input asp-for="ISPN" class="  bg-light ps-4 p-2 rounded-pill form-control" />
                <span asp-validation-for="ISPN" class="text-danger"></span>

            </div>
            <div class="d-flex flex-column">
                <label asp-for="Author" class="py-2 ps-3"></label>
                <input asp-for="Author" class="  bg-light ps-4 p-2 rounded-pill form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>

            </div>
            <div class="d-flex flex-column">
                <label asp-for="ListPrice" class="py-2 ps-3"></label>
                <input asp-for="ListPrice" class="  bg-light ps-4 p-2 rounded-pill form-control" />
                <span asp-validation-for="ListPrice" class="text-danger"></span>

            </div>
            <div class="d-flex flex-column">
                <label asp-for="Price" class="py-2 ps-3"></label>
                <input asp-for="Price" class="  bg-light ps-4 p-2 rounded-pill form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>

            </div>
            <div class="d-flex flex-column">
                <label asp-for="Price50" class="py-2 ps-3"></label>
                <input asp-for="Price50" class="  bg-light ps-4 p-2 rounded-pill form-control" />
                <span asp-validation-for="Price50" class="text-danger"></span>

            </div>
            <div class="d-flex flex-column">
                <label asp-for="Price100" class="py-2 ps-3"></label>
                <input asp-for="Price100" class="  bg-light ps-4 p-2 rounded-pill form-control" />
                <span asp-validation-for="Price100" class="text-danger"></span>

            </div>
            <div class="d-flex flex-column">
                <label asp-for="CategoryId" class="py-2 ps-3"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="bg-light ps-4 p-2 rounded-pill form-select">
                    <option disabled selected>
                        --Select--
                    </option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>

            </div>

            <div class="d-flex align-items-center justify-content-between">
                <button type="submit" class="btn mt-4 btn-primary text-white rounded-3">
                    ADD
                </button>
                <a asp-action="Index" asp-controller="Product" class="mt-5 ms-2 text-lg-start">
                    Back To List
                </a>
            </div>
        </form>
    </div>
</div>

@*client side Validation*@
@section Scripts
    {
    <partial name="_validationScriptsPartial" />
                }